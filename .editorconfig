# EditorConfig para mantener estilo de c√≥digo consistente
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{xml,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[*.properties]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2